#bin/bash
# Black        0;30     Dark Gray     1;30
# Red          0;31     Light Red     1;31
# Green        0;32     Light Green   1;32
# Brown/Orange 0;33     Yellow        1;33
# Blue         0;34     Light Blue    1;34
# Purple       0;35     Light Purple  1;35
# Cyan         0;36     Light Cyan    1;36
# Light Gray   0;37     White         1;37
RED='\033[0;31m'
NC='\033[0m' # No Color
LG='\033[1;32m'

unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
   OS=LINUX
elif [[ "$unamestr" == "darwin" ]]; then
   OS=LINUX
else
   OS=WINDOWS
fi

clear
echo -e "${RED}WARNING CHOOSING A DEVICE WILL REMOVE THE OUTPUT FOLDER AND ALL PREVIOUS WORK${NC}"
sleep 1

if [ ${OS} == LINUX ]
then
      COLUMNS=11
      PS3='Choose your device: '
      options=("OnePlus 1" "OnePlus X" "OnePlus 2" "OnePlus 3/3t" "OnePlus 5")
      select opt in "${options[@]}"
      do
    case $opt in
        "OnePlus 1")
            rm -rf output
            mkdir output
            cp src/devices/OP1/logo.bin output
            cp -fr src/tools/injector output
            echo  -e "${RED}loading OnePlus 1 files...${NC}"
            sleep 1
            echo  -e "${LG}Done!${NC}"
            sleep 1
            echo -e "now I will decode the logo.bin"
            cd output
            ./injector -i logo.bin -d
            cd ../
            sleep 1
            echo -e "done! now you're ready to edit. When you are done, you can encode"
            ./inject
            break
            ;;
        "OnePlus X")
            rm -rf output
            mkdir output
            cp src/devices/OPX/logo.bin output
            cp -fr src/tools/injector output
            echo  -e "${RED}loading OnePlus X files...${NC}"
            sleep 1
            echo  -e "${LG}Done!${NC}"
            sleep 1
            echo -e "now I will decode the logo.bin"
            cd output
            ./injector -i logo.bin -d
            cd ../
            sleep 1
            echo -e "done! now you're ready to edit. When you are done, you can encode"
            ./inject
            break
            ;;
        "OnePlus 2")
            rm -rf output
            mkdir output
            cp src/devices/OP2/logo.bin output
            cp -fr src/devices/OP2/updater-script src/zip/META-INF/com/google/android/
            cp -fr src/tools/injector output
            echo  -e "${RED}loading OnePlus 2 files...${NC}"
            sleep 1
            echo  -e "${LG}Done!${NC}"
            sleep 1
            echo -e "now I will decode the logo.bin"
            cd output
            ./injector -i logo.bin -d
            cd ../
            sleep 1
            echo -e "done! now you're ready to edit. When you are done, you can encode"
            ./inject
            break
            ;;
        "OnePlus 3/3t")
            rm -rf output
            mkdir output
            cp src/devices/OP3/logo.bin output
            cp -fr src/devices/OP3/updater-script src/zip/META-INF/com/google/android/
            cp -fr src/tools/injector output
            echo  -e "${RED}loading OnePlus 3/3t files...${NC}"
            sleep 1
            echo  -e "${LG}Done!${NC}"
            sleep 1
            echo -e "now I will decode the logo.bin"
            cd output
            ./injector -i logo.bin -d
            cd ../
            sleep 1
            echo -e "done! now you're ready to edit. When you are done, you can encode"
            ./inject
            break
            ;;
        "OnePlus 5")
            rm -rf output
            mkdir output
            cp src/devices/OP5/logo.bin output
            cp -fr src/devices/OP5/updater-script src/zip/META-INF/com/google/android/
            cp -fr src/tools/injector output
            echo  -e "${RED}loading OnePlus 5 files...${NC}"
            sleep 1
            echo  -e "${LG}Done!${NC}"
            sleep 1
            echo -e "now I will decode the logo.bin"
            cd output
            ./injector -i logo.bin -d
            cd ../
            sleep 1
            echo -e "done! now you're ready to edit. When you are done, you can encode"
            ./inject
            break
            ;;
        *) echo invalid device;;
      esac
done
elif [ ${OS} == WINDOWS ]
then
      COLUMNS=11
      PS3='Choose your device: '
      options=("OnePlus 1" "OnePlus X" "OnePlus 2" "OnePlus 3/3t" "OnePlus 5")
      select opt in "${options[@]}"
      do
    case $opt in
        "OnePlus 1")
            rm -rf output
            mkdir output
            cp src/devices/OP1/logo.bin output
            cp -fr src/tools/injector.exe output
            echo  -e "${RED}loading OnePlus 1 files...${NC}"
            sleep 1
            echo  -e "${LG}Done!${NC}"
            sleep 1
            echo -e "now I will decode the logo.bin"
            cd output
            ./injector.exe -i logo.bin -d
            cd ../
            sleep 1
            echo -e "done! now you're ready to edit. When you are done, you can encode"
            ./inject
            break
            ;;
        "OnePlus X")
            rm -rf output
            mkdir output
            cp src/devices/OPX/logo.bin output
            cp -fr src/tools/injector.exe output
            echo  -e "${RED}loading OnePlus X files...${NC}"
            sleep 1
            echo  -e "${LG}Done!${NC}"
            sleep 1
            echo -e "now I will decode the logo.bin"
            cd output
            ./injector.exe -i logo.bin -d
            cd ../
            sleep 1
            echo -e "done! now you're ready to edit. When you are done, you can encode"
            ./inject
            break
            ;;
        "OnePlus 2")
            rm -rf output
            mkdir output
            cp src/devices/OP2/logo.bin output
            cp -fr src/tools/injector.exe output
            echo  -e "${RED}loading OnePlus 2 files...${NC}"
            sleep 1
            echo  -e "${LG}Done!${NC}"
            sleep 1
            echo -e "now I will decode the logo.bin"
            cd output
            ./injector.exe -i logo.bin -d
            cd ../
            sleep 1
            echo -e "done! now you're ready to edit. When you are done, you can encode"
            ./inject
            break
            ;;
        "OnePlus 3/3t")
            rm -rf output
            mkdir output
            cp src/devices/OP3/logo.bin output
            cp -fr src/tools/injector.exe output
            echo  -e "${RED}loading OnePlus 3/3t files...${NC}"
            sleep 1
            echo  -e "${LG}Done!${NC}"
            sleep 1
            echo -e "now I will decode the logo.bin"
            cd output
            ./injector.exe -i logo.bin -d
            cd ../
            sleep 1
            echo -e "done! now you're ready to edit. When you are done, you can encode"
            ./inject
            break
            ;;
        "OnePlus 5")
            rm -rf output
            mkdir output
            cp src/devices/OP5/logo.bin output
            cp -fr src/tools/injector.exe output
            echo  -e "${RED}loading OnePlus 5 files...${NC}"
            sleep 1
            echo  -e "${LG}Done!${NC}"
            sleep 1
            echo -e "now I will decode the logo.bin"
            cd output
            ./injector.exe -i logo.bin -d
            cd ../
            sleep 1
            echo -e "done! now you're ready to edit. When you are done, you can encode"
            ./inject
            break
            ;;
        *) echo invalid device;;
      esac
done
else
    echo -e "${RED}You are using a unsuppported system...to fix this run OS=LINUX in terminal then run it. SUPPORT IS NOT GUARANTEED${NC}"
    break
fi
